# ==============================================================================
# Buxton Helmsley Investor Portal - Environment Variables
# ==============================================================================
# CRITICAL: Never commit this file with real values to version control
# Copy this to .env.local and fill in actual values
# ==============================================================================

# ------------------------------------------------------------------------------
# Application
# ------------------------------------------------------------------------------
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://investors.buxtonhelmsley.com

# ------------------------------------------------------------------------------
# Database (PostgreSQL on dev.buxtonhelmsley.com)
# ------------------------------------------------------------------------------
DATABASE_URL=postgresql://app_user:CHANGE_THIS_PASSWORD@dev.buxtonhelmsley.com:5432/investor_portal
DATABASE_BACKUP_URL=postgresql://backup_user:CHANGE_THIS_PASSWORD@dev.buxtonhelmsley.com:5432/investor_portal

# ------------------------------------------------------------------------------
# Authentication (NextAuth.js v5)
# ------------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
AUTH_SECRET=CHANGE_THIS_TO_RANDOM_STRING_AT_LEAST_32_CHARACTERS

# Session settings
AUTH_SESSION_STRATEGY=database
AUTH_SESSION_MAX_AGE=2592000

# ------------------------------------------------------------------------------
# Encryption
# ------------------------------------------------------------------------------
# For encrypting sensitive data (tax IDs, documents)
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=CHANGE_THIS_TO_RANDOM_STRING_AT_LEAST_32_CHARACTERS

# For document encryption at rest
DOCUMENT_ENCRYPTION_KEY=CHANGE_THIS_TO_RANDOM_STRING_AT_LEAST_32_CHARACTERS

# ------------------------------------------------------------------------------
# File Storage (on dev.buxtonhelmsley.com)
# ------------------------------------------------------------------------------
STORAGE_PATH=/var/www/investor-portal/storage
DOCUMENTS_PATH=/var/www/investor-portal/storage/documents
UPLOADS_PATH=/var/www/investor-portal/storage/uploads
BACKUPS_PATH=/var/www/investor-portal/backups

# Maximum file upload size (in bytes) - 100MB
MAX_FILE_SIZE=104857600

# ------------------------------------------------------------------------------
# SMTP Email Configuration
# ------------------------------------------------------------------------------
SMTP_HOST=PLACEHOLDER_SMTP_HOST
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=PLACEHOLDER_SMTP_USER
SMTP_PASSWORD=PLACEHOLDER_SMTP_PASSWORD
SMTP_FROM=ir@buxtonhelmsley.com
SMTP_FROM_NAME=Buxton Helmsley Investor Relations

# ------------------------------------------------------------------------------
# Security
# ------------------------------------------------------------------------------
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# MFA settings
MFA_ISSUER=Buxton Helmsley
MFA_WINDOW=1

# Password requirements
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# ------------------------------------------------------------------------------
# Backup & Disaster Recovery
# ------------------------------------------------------------------------------
BACKUP_ENABLED=true
BACKUP_FREQUENCY_HOURS=24
BACKUP_RETENTION_DAYS=365
BACKUP_ENCRYPTION_ENABLED=true

# ------------------------------------------------------------------------------
# Logging & Monitoring
# ------------------------------------------------------------------------------
LOG_LEVEL=info
LOG_PATH=/var/log/investor-portal
ENABLE_ACCESS_LOGGING=true
ENABLE_ERROR_LOGGING=true

# ------------------------------------------------------------------------------
# Feature Flags
# ------------------------------------------------------------------------------
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_RSU_AUTO_CALCULATION=true
ENABLE_PRE_VEST_NOTIFICATIONS=true
PRE_VEST_NOTIFICATION_DAYS=7

# ------------------------------------------------------------------------------
# Compliance
# ------------------------------------------------------------------------------
# Data retention in years
SHAREHOLDER_LOG_RETENTION_YEARS=7
INSIDER_LOG_RETENTION_YEARS=999

# ------------------------------------------------------------------------------
# Admin Users (Bootstrap)
# ------------------------------------------------------------------------------
# Email for initial admin user - this user will be created on first run
INITIAL_ADMIN_EMAIL=alexander@buxtonhelmsley.com

# ------------------------------------------------------------------------------
# Optional: External Services
# ------------------------------------------------------------------------------
# If you want to use external services later
# SENTRY_DSN=
# DATADOG_API_KEY=
